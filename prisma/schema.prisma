generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  lastname  String
  email     String   @unique
  password  String
  tasks     Task[]
  createdAt DateTime @default(now())
  deletedAt DateTime?

  @@map("users")
}

model Status {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  tasks Task[]

  @@map("status")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime @default(now())
  userId      Int
  statusId    Int      @default(1)
  user        User     @relation(fields: [userId], references: [id])
  status      Status   @relation(fields: [statusId], references: [id])
  deletedAt   DateTime?

  @@map("tasks")
}